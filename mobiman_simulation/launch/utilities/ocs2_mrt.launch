<?xml version="1.0" ?>

<launch>

      <!-- Enable rviz visualization -->
      <!-- Set nodes on debug mode -->
      <!-- Set nodes on debug mode -->
      <!--
            jackal_ur5
            ur5
      -->
      <!-- The URDF model of the robot -->
      <!-- The task file for the mpc. -->
      <!-- The library folder to generate CppAD codegen into -->
      <arg name="rviz"        default="true" />
      <arg name="debug"       default="false" />
      <arg name="robot"       default="jackal_ur5" />
      <arg name="urdfFile"    default="$(find mobiman_simulation)/urdf/jackal_fixedWheel_ur5.urdf" />
      <arg name="taskFile"    default="$(find mobiman_simulation)/config/task_$(arg robot).info" />
      <arg name="libFolder"   default="$(find mobiman_simulation)/codegen/auto_generated/$(arg robot)" />

      <!-- make the files into global parameters -->
      <!---param name="taskFile"   value="$(arg taskFile)" />
      <param name="urdfFile"   value="$(arg urdfFile)" />
      <param name="libFolder"  value="$(arg libFolder)" /-->
      <param name="workspacePath"  value="$(find mobiman_simulation)/" />

      <node pkg="ocs2_mobile_manipulator_ros" 
            type="mobile_manipulator_gazebo_mrt_node" 
            name="mobile_manipulator_gazebo_mrt_node" 
            output="screen"
            launch-prefix="" /> <!--gnome-terminal - - -->

      <node if="$(arg rviz)" 
                  pkg="ocs2_mobile_manipulator_ros" 
                  type="mobile_manipulator_target" 
                  name="mobile_manipulator_target" 
                  output="screen" />
</launch>
