## Clone ocs2
git clone git@github.com:RIVeR-Lab/ocs2.git
cd ocs2/
git checkout noetic-akmandor-v1

## Clone pinocchio
git clone --recurse-submodules https://github.com/RIVeR-Lab/pinocchio.git
cd pinocchio/
git checkout noetic-akmandor

## Clone hpp-fcl
git clone --recurse-submodules https://github.com/leggedrobotics/hpp-fcl.git

## Clone ocs2_robotic_assets
git clone https://github.com/leggedrobotics/ocs2_robotic_assets.git

## Clone voxblox
git clone git@github.com:RIVeR-Lab/voxblox.git
cd voxblox/
git checkout noetic-akmandor-v0

## Install dependencies
sudo apt install liburdfdom-dev liboctomap-dev libassimp-dev libglpk-dev

## Clone raisimLib
git clone --depth 1 https://github.com/raisimTech/raisimLib.git -b v1.1.01
cd raisimLib
mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=/usr/local/lib -DRAISIM_EXAMPLE=ON -DRAISIM_PY=ON -DPYTHON_EXECUTABLE=$(python3 -c "import sys; print(sys.executable)")
sudo make install -j4

# Add in ~/.bashrc
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib
export PYTHONPATH=$PYTHONPATH:/usr/local/lib

# Install to fix ocs_doc compilation error
pip install sphinxcontrib-spelling==4.2.1
pip install sphinxcontrib-bibtex==0.4.2
pip install Sphinx==1.8.5
pip install breathe==4.13.0
pip install sphinx_rtd_theme

# Add in ocs_doc/tools/sphinx/conf.py
master_doc = 'index'

# Change catkin config
catkin config --extend /opt/ros/noetic
catkin config -DCMAKE_BUILD_TYPE=RelWithDebInfo
